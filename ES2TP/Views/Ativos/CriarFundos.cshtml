@model ES2TP.Models.FundosModel

@{
    ViewData["Title"] = "CriarFundos";
    var hasError = ViewData["HasError"] as bool? ?? false;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Criar Fundos</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CriarFundos">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Montanteinvestido" class="control-label"></label>
                <input asp-for="Montanteinvestido" type="montante" class="form-control"/>
                <span asp-validation-for="Montanteinvestido" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Taxajuro" class="control-label"></label>
                <input asp-for="Taxajuro" type="taxa" class="form-control"/>
                <span asp-validation-for="Taxajuro" class="text-danger"></span>
            </div>

            <p> </p>
            <b></b>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        
        @if (hasError)
        {
            <p style="color: red;">
                The introduced credentials are invalid
            </p>
        }
    </div>
</div>