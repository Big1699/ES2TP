@model ES2TP.Models.DepositosMostarModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var errors = ViewData["Errors"] as List<string> ?? new List<string>();
}

<h1>EditarAtivos</h1>

<h4>Ativos Financeiros</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarDeposito" method="Post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idAtivoFinanceiro" />
            <div class="form-group">
                <label asp-for="Titulares" class="control-label"></label>
                <input asp-for="Titulares" class="form-control" />
                <span asp-validation-for="Titulares" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaxaJurosAnual" class="control-label"></label>
                <input asp-for="TaxaJurosAnual" class="form-control" />
                <span asp-validation-for="TaxaJurosAnual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroConta" class="control-label"></label>
                <input asp-for="NumeroConta" class="form-control" />
                <span asp-validation-for="NumeroConta" class="text-danger"></span>
            </div>
                        <div class="form-group">
                            <label asp-for="Banco" class="control-label"></label>
                            <input asp-for="Banco" class="form-control" />
                            <span asp-validation-for="Banco" class="text-danger"></span>
                        </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div style="color: red;">
                @foreach (var error in errors)
                {
                    <p>@error</p>
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="RecebeDadosDeposito">Back to List</a>
</div>
