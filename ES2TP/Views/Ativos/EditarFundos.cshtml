@model ES2TP.Models.FundosMostarModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var errors = ViewData["Errors"] as List<string> ?? new List<string>();
}

<h1>Edit</h1>

<h4>Fundos de Investimento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarFundos">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idFundos" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontanteInvestido" class="control-label"></label>
                <input asp-for="MontanteInvestido" class="form-control" />
                <span asp-validation-for="MontanteInvestido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaxaJuro" class="control-label"></label>
                <input asp-for="TaxaJuro" class="form-control" />
                <span asp-validation-for="TaxaJuro" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div style="color: red;">
                @foreach (var error in errors)
                {
                    <p>@error</p>
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="RecebeDadosFundos">Back to List</a>
</div>
